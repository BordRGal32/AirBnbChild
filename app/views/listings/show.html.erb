<div class='row'>
  <div class='col-sm-6'>
    <h1><%= @listing.title %></h1>
    <h4> Description: </h4>
    <h5><%= @listing.description %></h5>
    <h4> Location: </h4>
    <h5> <%= @listing.location %> </h5>
    <h4> Bedrooms: </h4>
    <h5><%= @listing.bedrooms %></h5>
    <h4> Bathrooms: </h4>
    <h5><%= @listing.bathrooms %></h5>
    <h4> Price: </h4>
    <h5><%= number_to_currency(@listing.price) %></h5>
  </div>

  <div class='col-md-6'>
    <% @listing.images.each do |image| %>
        <div class="photos">
        <p><%= link_to (image_tag image.photo.url(:thumb)), listing_images_path(@listing) %>
        </div>
    <% end %>
  </div>
</div>
<hr>

<div class="row">
  <div class="col-md-6">
    <div class="add_rating">
     <%= render("ratings/form") %>
     </div>
  </div>
  <div class="col-md-6">
    <h5> Average Rating </h5>
 <% if @listing.average_rating.nil? %>
          <dd><p>No rating yet.</dd>
          <% else %>
          <dd>
          <% stars = "<span class='glyphicon glyphicon-star'></span>".html_safe %>
          <% @listing.average_rating.to_i.times do %>
            <%= stars %>
          <% end %>
          <% empty = "<span class='glyphicon glyphicon-star-empty'></span>".html_safe %>
          <% empty_stars = 5 - @listing.average_rating.to_i %>
          <% empty_stars.times do %>
            <%= empty %>
          <% end %>
        <% end %></dd>

  </div>
</div>

<hr>

<div class="row">
  <button class="new hide_buttons btn btn-info">Book Listing</button>
  <div class="hidden_form">
    <h1>Bookings:</h1>
    <%= raw(event_calendar) %><br>
    <%= render('events/form') %>
  </div>
</div>






<hr>
<% if current_user != nil %>
  <% if current_user.id == @listing.user_id %>
    <div class="row">
      <div class="col-md-4">
        <%= render('layouts/errors', :object => @image) %>
        <%= form_for [@listing, @image], remote: true, authenticity_token: true, html: { :multipart => true } do |f| %>
          <div class="form-group">
            <%= f.label :photo, "Select Photo" %>
            <%= f.file_field :photo, class: 'form-control' %>
          </div>
          <%= f.submit 'Submit', class: 'btn btn-info' %>
        <% end %>
      </div>

      <div class="col-md-8">

        <%= link_to 'Edit Listing', edit_listing_path(@listing), :class => 'btn btn-info' %>
        <%= link_to "Delete Listing", listing_path(@listing), :class => 'btn btn-info', data: { :confirm => "are you sure", :method => "delete" } %>

      </div>
    </div>
  <%end%>
<% end %>



